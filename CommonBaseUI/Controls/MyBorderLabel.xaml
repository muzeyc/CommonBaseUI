             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Border Name="pnlBorder" BorderBrush="#4a4a4a" BorderThickness="0.5" CornerRadius="3">
        <StackPanel Name="pnlBody" Margin="5" MinHeight="25">
            <TextBlock Name="lblContent" VerticalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
