<UserControl x:Class="CommonBaseUI.Controls.MyAttachment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <WrapPanel Name="body">
        <Border Name="btnAdd" Width="60" Height="60" Margin="0,0,5,5" BorderBrush="#4a4a4a" 
                BorderThickness="0.5" Background="#FFFFFF" MouseLeftButtonUp="btnAdd_Click" MouseMove="btnAdd_MouseMove" MouseLeave="btnAdd_MouseLeave">
            <Grid Margin="10">
                <Label Name="lblPercent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Border BorderThickness="0.5" Width="0.5" BorderBrush="#4a4a4a" />
                <Border BorderThickness="0.5" Height="0.5" BorderBrush="#4a4a4a" />
            </Grid>
        </Border>
    </WrapPanel>
</UserControl>
