<UserControl x:Class="CommonBaseUI.Controls.MyTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <StackPanel Name="pnlBorder" Background="#EBEBEB">
        <StackPanel Name="pnlItems" Height="40" Orientation="Horizontal" Background="#4a4a4a"></StackPanel>
        <ScrollViewer x:Name="pnlBodyScr" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Name="pnlBody" VerticalAlignment="Top" HorizontalAlignment="Left" Height="auto"></StackPanel>
        </ScrollViewer>
    </StackPanel>
</UserControl>
