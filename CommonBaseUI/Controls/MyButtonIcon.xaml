<UserControl xmlns:Controls="clr-namespace:Util.Controls;assembly=Util.Controls" x:Class="CommonBaseUI.Controls.MyButtonIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="80">
    <Grid>
        <Border Name="pnlBorder" BorderThickness="0.8" CornerRadius="3">
            <Controls:FButton x:Name="btn" FIcon="&#xf0ee;"
                              Margin="3,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MouseMove="btn_MouseMove" MouseLeave="btn_MouseLeave"
                              Click="btn_Click" />
        </Border>
    </Grid>
</UserControl>
