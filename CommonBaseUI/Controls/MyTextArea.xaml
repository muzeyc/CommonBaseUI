<UserControl x:Class="CommonBaseUI.Controls.MyTextArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Name="splBorder" HorizontalAlignment="Left">
            <Label Name="lblCaption" Content="coption" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" />
            <Border Name="brdInput" BorderBrush="#999999" Background="#fff" BorderThickness="0.5" CornerRadius="3">
                <TextBox Name="txtInput" Height="54" TextWrapping="Wrap" Width="300" HorizontalAlignment="Left" BorderBrush="#fff"
                     VerticalAlignment="Top" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="2" />
            </Border>
            
           
        </StackPanel>
    </Grid>
</UserControl>
